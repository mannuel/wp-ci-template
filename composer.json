{
  "name": "wearenolte/wp-ci-template",
  "description": "",
  "type": "project",
  "keywords": [],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
			"url": "https://dev-nolte-wpackagist.pantheonsite.io/satispress"
    },
    {
      "type": "vcs",
      "url": "https://github.com/pantheon-systems/wordpress-composer"
    }
  ],
  "require": {
    "php": ">=7.2",
    "composer/installers": "^1.3.0",
    "pantheon-systems/quicksilver-pushback": "^2",
    "pantheon-systems/wordpress-composer": "*",
    "roots/wp-password-bcrypt": "^1.0.0",
    "rvtraveller/qs-composer-installer": "^1.1",
    "vlucas/phpdotenv": "^3.1.0",
    "wpackagist-theme/twentynineteen": "^1.2",
    "wpackagist-plugin/lh-hsts": "^1.24",
    "wpackagist-plugin/pantheon-advanced-page-cache": ">=0.3.0",
    "wpackagist-plugin/postmark-approved-wordpress-plugin": "dev-trunk",
    "wpackagist-plugin/wordpress-seo": "dev-trunk",
    "wpackagist-plugin/stream": "dev-trunk",
    "wpackagist-plugin/automatic-alternative-text": "dev-trunk",
    "wpackagist-plugin/wp-help": "dev-trunk",
    "wpackagist-plugin/acf-image-aspect-ratio-crop":"dev-trunk",
    "nolte-wpackagist/advanced-custom-fields-pro": ">=5.8",
    "nolte-wpackagist/wpmudev-updates": ">=4.7.3.5",
    "nolte-wpackagist/wp-smush-pro": ">=3.3.2"
  },
  "require-dev": {
    "behat/mink-goutte-driver": "^1.2.1",
    "brain/monkey": "^2.2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "dmore/behat-chrome-extension": "^1.2",
    "genesis/behat-fail-aid": "^2.1",
    "paulgibbs/behat-wordpress-extension": "^3.3.0",
    "phpunit/phpunit": "^7.5.1",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.4.0",
    "wp-coding-standards/wpcs": "^2.2"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "extra": {
    "wordpress-install-dir": "web/wp",
    "build-env": {
      "install-cms": [
        "wp core install --title={site-name} --url={site-url} --admin_user={account-name} --admin_email={account-mail} --admin_password={account-pass}",
        "wp option update permalink_structure '/%postname%/'",
        "wp theme activate lean-theme"
      ]
    },
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/wp-content/themes/{$name}/": ["type:wordpress-theme"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    }
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ],
    "psr-4": { "PantheonSystems\\WordHatHelpers\\": "tests/behat/helper_classes/" }
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "yarn",
      "composer install --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress",
      "@build-theme-assets"
    ],
    "build-theme-assets": [
      "cd web/wp-content/themes/lean-theme && composer install --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
    ],
    "update-theme-assets": [
      "cd web/wp-content/themes/lean-theme && composer update --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
    ],
    "prepare-for-pantheon": "WordPressProject\\composer\\ScriptHandler::prepareForPantheon",
    "cleanup": [
      "./scripts/composer/cleanup-composer"
    ],
    "post-install-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles",
      "@build-theme-assets"
    ],
    "post-update-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles",
      "@update-theme-assets",
      "@build-theme-assets"
    ],
    "post-create-project-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles",
      "@build-theme-assets"
    ],
    "code-sniff": [
      "./vendor/bin/phpcs --standard=WordPress ./web/wp-content/themes"
    ],
    "unit-test": [
      "./vendor/bin/phpunit tests/unit/*",
      "php coverage-checker.php clover.xml 80"
    ],
    "functional-test": [
      "./tests/cypress/run"
    ],
    "functional-test-open": [
      "./tests/cypress/open"
    ],
    "test": [
      "@unit-test",
      "@functional-test"
    ],
    "lint": "find web/wp-content -name '*.php' -exec php -l {} \\;"
  }
}
